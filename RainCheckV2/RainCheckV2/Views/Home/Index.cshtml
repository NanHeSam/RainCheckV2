
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section head{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <link href="~/Content/home.css" rel="stylesheet" />
<script>
        $(document).ready(function () {
            $("#aboutlink").click(function () {
                $("#homelink").attr("class", "");
                $("#contactuslink").attr("class", "");
                $("#aboutlink").attr("class", "active");
                $("#home").attr("class", "tab-pane fade");
                $("#contactUs").attr("class", "tab-pane fade");
                $("#about").attr("class", "tab-pane fade in active");
            });
            $("#contactuslink").click(function () {
                $("#homelink").attr("class", "");
                $("#aboutlink").attr("class", "");
                $("#contactuslink").attr("class", "active");
                $("#home").attr("class", "tab-pane fade");
                $("#about").attr("class", "tab-pane fade");
                $("#contactUs").attr("class", "tab-pane fade in active");
            });
            $("#homelink").click(function () {
                $("#contactuslink").attr("class", "");
                $("#aboutlink").attr("class", "");
                $("#homelink").attr("class", "active");
                $("#contactUs").attr("class", "tab-pane fade");
                $("#about").attr("class", "tab-pane fade");
                $("#home").attr("class", "tab-pane fade in active");
            });

            $("#getQuoteBtn").click(function () {
                // customize a rule regex
                $.validator.addMethod("regex", function (value, element, regexpr) {
                    return regexpr.test(value);
                }, "Please enter a valid pasword.");

                $("#zipcodeForm").validate({
                    errorPlacement: function (error, element) { // error message position
                        error.insertAfter($("#zipcodeError")); //

                    },
                    rules: {
                        Zipcode: {
                            required: true,
                            regex: /^[0-9]{5,5}$/
                        }
                    },
                    messages: {
                        Zipcode: {
                            required: "zipcode required",
                            regex: "invalid zipcode"
                        }
                    },
                    errorClass: "myErrorClass"
                });
            });


        });
</script>
}

