@model RainCheckV2.Models.login

@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="~/Content/login.css" rel="stylesheet" />
}

<div class="Content">
    @using (Html.BeginForm("LoginSubmit", "Login", FormMethod.Post))
            {
        <div class="HeaderLabel"><h3>Welcome back to RainCheck</h3></div>
                <hr />
                <div class="logInfoDiv">
                    <span style="color:red;">@TempData["errorMessage"]<br /></span>
                    <table>
                        <tr>
                            <td><span>Username:</span></td>
                            <td>
                                @Html.TextBoxFor(m => m.user_name, new { @class = "form-control" })<!--input name="Username" id="UsernameTextBox" type="text" /-->
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>@Html.ValidationMessageFor(x => x.user_name, null, new { @style = "color:red;" })</td>
                        </tr>

                        <tr>
                            <td><span>Password:</span></td>
                            <td>
                                @Html.TextBoxFor(m => m.password, new { @class = "form-control" })<!--input name="Password" id="PasswordTextBox" type="text" /-->
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>@Html.ValidationMessageFor(x => x.password, null, new { @style = "color:red;" })</td>
                        </tr>
                    </table>
                </div>
                <div class="checkboxDiv">
                    <input name="RememberCheckbox" id="RememberCheckbox" type="checkbox" value="true" /> Remember Me
                </div>
                <div class="submitDiv">
                    <input id="SubmitBtn" class="btn btn-danger btn-block" type="submit" value="submit" />
                </div>
    }
    <hr />
    <!--</form>-->
    <div class="forgetInfoDiv">
        <a href="../Login/ForgetUsername">Forget Username</a>
        <span style="width:20px; display:inline-block;"></span>
        <a href="../Login/ForgetPassword">Forget Password</a>
    </div>
</div>