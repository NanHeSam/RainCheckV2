
@{
    ViewBag.Title = "ReferenceView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
    <script src="~/Scripts/jquery-3.1.1.js"></script>
}

<div class="wrapper">

    <section id="quotelay">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="row">
                <div class="jumbotron">

                    <h1>Reference Number: @TempData.Peek("refNUM")</h1>
                    <h3>Write it down. You NEED it to access your quote!</h3>

                </div>
                <div style="padding-top:50px;">
                    <button type="button" value="submit" name="gohome" onclick="location.href='@Url.Action("Index", "Home")'" class="btn btn-primary btn-lg" style="background-color:#B03A2E;">Go Home</button>
                </div>

            </div>
        </div>
    </section>
</div>